{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">

    {% if page.global_header %}
      <div class="page__global_header">
        <div class="container-fluid px-0">
            {{ page.global_header }}
        </div>
      </div>
    {% endif %}

  <main class="pt-5 pb-5">
    {% if page.header %}
      <header class="page__header mb-3">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}
    
      {% embed '@radix/navbar/navbar.twig' with {
          container: 'fixed',
          color: 'light',
          utility_classes: ['bg-light'],
      } %}

          {% block branding %}
              {% if page.navbar_branding %}
                  {{ page.navbar_branding }}
              {% endif %}
          {% endblock %}

          {% block left %}
              {% if page.navbar_left %}
                <div class="mr-auto">
                    {{ page.navbar_left }}
                </div>
              {% endif %}
          {% endblock %}

          {% block right %}
              {% if page.navbar_right %}
                  {{ page.navbar_right }}
              {% endif %}
          {% endblock %}
      {% endembed %}

      {% if page.content %}
        <div class="page__content">
          <div class="container-fluid px-0">
              {{ page.content_top }}
          </div>
          <div class="container">
              {{ page.content }}
          </div>
          <div class="container px-0">
              {{ page.content_bottom }}
          </div>
        </div>
      {% endif %}
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container">
        <div class="d-flex justify-content-md-between align-items-md-center">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}
</div>
